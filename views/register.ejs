<!-- Create a GET /register endpoint, which returns a page that includes a form with an email and password field. -->

<html lang="en">

<head>
    <title>Register</title>
</head>

<body style="margin:25px">
    <h1>Register for TinyApp</h1>
    <h3>Please enter your email and create a password.</h3>
    <form action="/register" method="POST">

        <div style="margin-bottom:10px">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" style="width: 200px">
        </div>
        <div style="margin-bottom:10px">    
            <label for="password">Password</label>
            <input id="password" type="password" name="password" style="width: 200px">
        </div>
        <div>
            <input type="submit" value="Register">
        </div>
    </form>
    <p style="display: inline-block;">Already made an account? <strong><a href="/login">Login to your account</a></strong></p>
</body>

</html>