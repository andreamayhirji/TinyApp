<!-- Create a GET /register endpoint, which returns a page that includes a form with an email and password field. -->

<html lang="en">

<head>
    <title>Register for TinyApp</title>
</head>

<body>
    <h1>Register for TinyApp</h1>


    <form action="/register" method="POST" style="padding:10px">

        <div style="margin:10px">
            <label for="email">Email Address</label>
            <input id="email" type="text" name="email" style="width: 200px">
        </div>
        <div style="margin:10px">    
            <label for="password">Password</label>
            <input id="password" type="password" name="password" style="width: 200px">
        </div>
        <div style="margin:10px">
            <input type="submit" value="Register">
        </div>
    </form>

</body>

</html>