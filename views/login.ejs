            <input id="email" type="email" name="email" style="width: 200px">

        </div>
        <div style="margin:10px">
            <label for="password">Password</label>
            <input id="password" type="text" name="password" style="width: 200px">
        </div>
        <input type="submit" value="Submit">
    </form>

    <% };%>




</body>

</html>


