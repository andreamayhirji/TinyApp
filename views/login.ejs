<body>
    <h1>Login to TinyApp</h1>

    <% if(userId) { %>
    <p style="display: inline-block;">
        <%= user[userId].email %>
    </p>

    <form style="display: inline-block;" action="/logout" method="POST">
        <input name="logout" type="submit" value="logout">
    </form>

    <% } else  { %>
    <form action="/login" method="POST">
        <div style="margin:10px">
            <label for="username">UserId</label>
            <input id="username" type="text" name="username"  style="width: 200px">
            
        </div>
        <div style="margin:10px">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" style="width: 200px">
        </div>
        <input type="submit" value="Submit">
    </form>

    <% };%>


